---
import { getCollection } from "astro:content";
import Container from "@components/Container.astro";
import PageLayout from "@layouts/PageLayout.astro";
import ArrowCard from "@components/ArrowCard.astro";
import Link from "@components/Link.astro";
import { dateRange } from "@lib/utils";
import { SITE, HOME, SOCIALS } from "@consts";

const blog = (await getCollection("blog"))
  .filter((post) => !post.data.draft)
  .sort((a, b) => b.data.date.valueOf() - a.data.date.valueOf())
  .slice(0, SITE.NUM_POSTS_ON_HOMEPAGE);

const projects = (await getCollection("projects"))
  .filter((project) => !project.data.draft)
  .sort((a, b) => b.data.date.valueOf() - a.data.date.valueOf())
  .slice(0, SITE.NUM_PROJECTS_ON_HOMEPAGE);

const allwork = (await getCollection("work"))
  .sort(
    (a, b) =>
      new Date(b.data.dateStart).valueOf() -
      new Date(a.data.dateStart).valueOf(),
  )
  .slice(0, SITE.NUM_WORKS_ON_HOMEPAGE);

const work = await Promise.all(
  allwork.map(async (item) => {
    const { Content } = await item.render();
    return { ...item, Content };
  }),
);
---

<PageLayout title={HOME.TITLE} description={HOME.DESCRIPTION}>
  <Container>
    <h4 class="animate font-semibold text-black dark:text-white">
      Hi, I'm C√©sar <span class="text-xl">üëãüèª</span>
    </h4>
    <div class="space-y-16">
      <section>
        <article class="space-y-4">
          <p class="animate text-justify">
            Hi there! I'm a Fullstack Developer with over 12 years of
            experience, diving deep into the worlds of Fintech, Banking, and
            beyond. Throughout my career, I‚Äôve worked on diverse projects
            ranging from e-commerce platforms to civil engineering applications
            and even healthcare solutions. I‚Äôm passionate about building
            seamless digital experiences, whether that means crafting beautiful
            and responsive web interfaces, architecting robust backend systems,
            or developing mobile apps that bring everything together.
          </p>
          <p class="animate text-justify">
            I‚Äôm skilled in modern frontend frameworks like React, Vue, and Next,
            and bring the same expertise to backend technologies, including
            Ruby, Node, Elixir, Java and others, ensuring efficient, scalable
            solutions. Databases like MSSQL and Postgres are part of my toolkit
            to keep data structured and accessible.
          </p>
          <p class="animate text-justify">
            My approach to development is focus on creating applications that
            deliver consistent, high-quality experiences across web and mobile
            platforms. Whether building an intuitive mobile app or a dynamic web
            interface, I prioritize responsive design, functionality, and user
            satisfaction. Always eager to tackle new challenges, I look forward
            to bringing innovative ideas to life through code. When I‚Äôm not
            coding, I‚Äôm often exploring my other passions: photography, travel,
            and practicing Brazilian Jiujitsu.
          </p>
          <p class="animate text-justify">
            Let‚Äôs create something amazing together!
          </p>
        </article>
      </section>

      <section class="animate space-y-6 hidden">
        <div class="flex flex-wrap gap-y-2 items-center justify-between">
          <h5 class="font-semibold text-black dark:text-white">Latest posts</h5>
          <Link href="/blog"> See all posts </Link>
        </div>
        <ul class="flex flex-col gap-4">
          {
            blog.map((post) => (
              <li>
                <ArrowCard entry={post} />
              </li>
            ))
          }
        </ul>
      </section>

      <section class="animate space-y-6">
        <div class="flex flex-wrap gap-y-2 items-center justify-between">
          <h5 class="font-semibold text-black dark:text-white">
            Work Experience
          </h5>
          <Link href="/work"> See all work </Link>
        </div>
        <ul class="flex flex-col space-y-4">
          {
            work.map((entry) => (
              <li>
                <div class="font-semibold text-black dark:text-white">
                  {entry.data.company}
                </div>
                <div class="text-sm opacity-75">
                  {dateRange(entry.data.dateStart, entry.data.dateEnd)}
                </div>
                <div class="text-sm opacity-75">{entry.data.role}</div>
                <article class="text-justify">
                  <entry.Content />
                </article>
              </li>
            ))
          }
        </ul>
      </section>

      <section class="hidden animate space-y-6">
        <div class="flex flex-wrap gap-y-2 items-center justify-between">
